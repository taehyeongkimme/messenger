<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.171" 
					  fx:controller="com.th.messenger.FriendController"	xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefHeight="105.0" prefWidth="300.0" text="친구찾기">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="80.0" prefWidth="300.0" spacing="20.0">
               <children>
                  <Label text="아이디" />
                  <TextField fx:id="id" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox prefHeight="70.0" prefWidth="300.0">
               <children>
                  <Label fx:id="msg" alignment="CENTER" prefHeight="44.0" prefWidth="300.0" />
               </children></HBox>
            <HBox alignment="CENTER" prefHeight="80.0" prefWidth="300.0" spacing="40.0">
               <children>
                  <Button onMouseClicked="#find" mnemonicParsing="false" prefWidth="80.0" text="검색" />
                  <Button id="findfriendCloseBtn" mnemonicParsing="false" prefWidth="80.0" text="닫기" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
